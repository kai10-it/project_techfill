<%= form_tag("/articles/create") do %>
    <div class="article-container">    
        <div class="article-message">
            <h1>記事の編集をします</h1>
        </div>
        <div class="article-title">
            <h2>タイトル</h2>
            <input name="title" type="form" value="<%= @article.title %>">
        </div>
        <div class="article-text">
            <h2>本文</h2>
            <textarea name="textarea"><%= @article.body %></textarea>
        </div>
        <div class="article-submit">
            <input name="submit" type="submit" value="記事更新">
        </div>
    </div>
<% end %>